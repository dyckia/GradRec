//- Needs random id number (4 diggits) on every content element
mixin accordion_mixin(id, index, ...items)
  section.accordion(data-comp=id, id=id+"-"+index)
    header.acc__header
      h1.acc__headline Accordion #{index}
      p.acc__leading Leading introduction text (opt).
    each item, i in items
      section.acc__entry(id="acc__entry-"+index+"-"+(i+1))
        header.acc__entry-header
          h1.acc__entry-headline
            a.acc__entry-trigger(
              aria-controls="acc__entry-content-"+index+"-"+(i+1),
              aria-expanded="false",
              href="#acc__entry-content-"+index+"-"+(i+1)
            ) #{trigger_value} #{index} - #{i+1}
        div.acc__entry-content(
          aria-hidden="true",
          id="acc__entry-content-"+index+"-"+(i+1)
        )
          //- div.acc__entry-content-inner
          case item
            when 1
              p Content #{i+1}
              ol
                li Lorem ipsum dolor sit amet, consectetur adipisicing elit. Vel vero animi est, vitae consequuntur magnam porro hic ab fugiat repudiandae earum eveniet, voluptatum, ad velit dolores atque. Consequatur, labore, possimus!
                li Lorem ipsum dolor sit amet, consectetur adipisicing elit. Corporis aliquam necessitatibus eius sint excepturi dolorem, debitis repellat quos doloremque earum tempora, iste soluta voluptate illum possimus ipsam itaque dignissimos natus?
