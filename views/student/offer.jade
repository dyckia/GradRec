include ../layouts/_student_header.jade
.container
  .row.mt-sm-4.mt-md-5.mb-md-5
    .col-sm-12.border.rounded.p-5.bg-light
   
      -if(offer){
        -if(!offer.isaccept && project){
            h3 Congratulations!
            p.text-muted You have received an offer. Below are the offer details and conditions.
            hr
            h5.mt-4 Project Title: #{offer.title}
            p
            p
            h5.mt-4 Conditions
            P #{offer.content}
            .btn-toolbar.justify-content-center.mt-4
              a.btn.btn-outline-danger.btn-lg.mr-5.mt-4(href='/declineOffer?title=#{offer.title}&email=#{offer.email}') Decline Offer
              a.btn.btn-outline-success.btn-lg.mt-4(href='/acceptOffer?title=#{offer.title}&email=#{offer.email}') Accept Offer
        -} else {
            -if(project){
            h3 Congratulations!
            p.text-muted You are enrolled in Project: #{offer.title}
            -} else{   
            .alert.alert-info
                  strong No offers recieved
            -}
        -}
    -}else{
      .alert.alert-info
         strong No offers recieved
    -}
include ../layouts/_footer.jade
