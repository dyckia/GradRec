              img(
                alt="ALT",
                height="100",
                src="http://placehold.it/100x100",
                title="TITLE",
                width="100"
              )
            when 2
              p Content #{i+1}
              img(
                alt="ALT",
                height="200",
                src="http://placehold.it/200x200",
                title="TITLE",
                width="200"
              )
            when 3
              p Content #{i+1}
              img(
                alt="ALT",
                height="300",
                src="http://placehold.it/300x300",
                title="TITLE",
                width="300"
              )
            when 4
