doctype html
html(lang='en')
  head
    title Login
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    // ===============================================================================================
    link(rel='icon', type='image/png', href='images/icons/favicon.ico')
    // ===============================================================================================
    link(rel='stylesheet', type='text/css', href='vendor/bootstrap/css/bootstrap.min.css')
    // ===============================================================================================
    link(rel='stylesheet', type='text/css', href='fonts/font-awesome-4.7.0/css/font-awesome.min.css')
    // ===============================================================================================
    link(rel='stylesheet', type='text/css', href='fonts/Linearicons-Free-v1.0.0/icon-font.min.css')
    // ===============================================================================================
    link(rel='stylesheet', type='text/css', href='vendor/animate/animate.css')
    // ===============================================================================================
    link(rel='stylesheet', type='text/css', href='vendor/css-hamburgers/hamburgers.min.css')
    // ===============================================================================================
    link(rel='stylesheet', type='text/css', href='vendor/select2/select2.min.css')
    // ===============================================================================================
    link(rel='stylesheet', type='text/css', href='css/util.css')
    link(rel='stylesheet', type='text/css', href='css/main.css')
    // ===============================================================================================
  body
    .limiter
      .container-login100
        .wrap-login100.p-l-50.p-r-50.p-t-77.p-b-30
          form.login100-form.validate-form(action='/login', method='post')
            span.login100-form-title.p-b-55
              | Login
            .wrap-input100.validate-input.m-b-16(data-validate='Valid email is required: ex@abc.xyz')
              input#email.input100(type='text', name='email', placeholder='Email')
              span.focus-input100
              span.symbol-input100
                span.lnr.lnr-envelope
            .wrap-input100.validate-input.m-b-16(data-validate='Password is required')
              input#pass.input100(type='password', name='pass', placeholder='Password')
              span.focus-input100
              span.symbol-input100
                span.lnr.lnr-lock
            .row
              .col-sm-9
                label
                  | Login as
              .col-sm-8
                label.radio-inline
                  input#input-type-student(name='account_type', value='Student', type='radio', required='')
                  |  Student
              .col-sm-8
                label.radio-inline
                  input#input-type-ProjectManager(name='account_type', value='ProjectManager', type='radio')
                  |  Project
                  | 								Manager
              .col-sm-8
                label.radio-inline
                  input#input-type-ProjectParticant(name='account_type', value='ProjectParticant', type='radio')
                  |  Project
                  | 								Particant
            .contact100-form-checkbox.m-l-4
              label
              input#ckb1.input-checkbox100(type='checkbox', name='remember-me')
              label.label-checkbox100(for='ckb1')
                | Remember me
            .container-login100-form-btn.p-t-25
              button.login100-form-btn(type='submit')
                | Login
            .text-center.w-full.p-t-115
              span.txt1
                | Not a member?
              a.txt1.bo1.hov1(href='Signup.html')
                | Sign up now
    // ===============================================================================================
    script(src='vendor/jquery/jquery-3.2.1.min.js')
    // ===============================================================================================
    script(src='vendor/bootstrap/js/popper.js')
    script(src='vendor/bootstrap/js/bootstrap.min.js')
    // ===============================================================================================
    script(src='vendor/select2/select2.min.js')
    // ===============================================================================================
    script(src='js/main.js')
