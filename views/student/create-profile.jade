include ./layouts/_student_header.jade
    .container
      .row.mt-sm-4.mt-md-5.mb-md-5
        .col-sm-12.border.rounded.p-5.bg-light
          h3 Create Profile
          p.text-muted
            | Our records show you haven't submitted your profile. Please complete the following form. All matched projects will be displayed under the "Projects" section after your submission.
          form.needs-validation(novalidate='')
            .form-group.mt-4
              h5 Personal information
              hr.mt-1
              .row
                .col-sm-6.col-lg-4.mb-3
                  label(for='firstName') First Name *
                  input#firstName.form-control(type='text', name='firstName', placeholder='John', required='')
                  .invalid-feedback First name is required.
                .col-sm-6.col-lg-4.mb-3
                  label(for='lastName') Last Name *
                  input#lastName.form-control(type='text', name='lastName', placeholder='Appleseed', required='')
                  .invalid-feedback Last name is required.
            .form-group.mt-4
              h5 Education
              hr.mt-1
              .row
                .col-sm-4.col-lg-2.mb-3
                  label(for='program') Program *
                  select#program.form-control(name='program', required='')
                    option(value='') Choose...
                    option(value='phd') PhD
                    option(value='master') Master
                  .invalid-feedback Please choose your current program.
                .col-sm-8.col-lg-3.mb-3
                  label(for='program') Department *
                  select#department.form-control(name='department', required='')
                    option(value='') Choose...
                    option(value='business') Business
                    option(value='computer') Computer Science
                    option(value='engineering') Engineering
                    option(value='medical') Medical
                    option(value='science') Science
                  .invalid-feedback Please choose your department.
                .col-sm-6.col-lg-3.mb-3
                  label(for='program') Major *
                  select#major.form-control(name='major', required='')
                    option(value='') Choose...
                    option(value='ai') Artificial Intelligence
                    option(value='bioinfo') Bioinformatics
                    option(value='compArch') Computer Architecture
                    option(value='os') Operating Systems
                  .invalid-feedback Please choose your major.
                .col-sm-6.col-lg-4.mb-3
                  label(for='program') Research Interest *
                  select#research.form-control(required='')
                    option(value='') Choose...
                    option(value='gameAI') Game AI
                    option(value='nLP') Natural Language Processing
                    option(value='cV') Computer Vision
                  .invalid-feedback Please choose your research interest.
            .form-group.mt-4
              .row
                .col.mb-3
                  h5 Work Experience
                  hr.mt-1
                  label(for='workExp')
                    | Please give a brief description about your past work experience. (no longer than 1000 characters)
                  textarea#workExp.form-control(name='workExp', rows='5')
            .form-group.mt-4
              h5 Start Date
              hr.mt-1
              .row
                .col-xs-9.col-md-7.col-lg-5.mb-3
                  label(for='startDate') Please indicate your intended start date. *
                  input#startDate.form-control(type='date', name='startDate', min='2018-11-01', max='2020-12-31', required='')
                  .invalid-feedback Please choose your intended start date.
            .form-group.mt-4
              h5 Research Funds
              hr.mt-1
              .row
                .col-xs-9.col-md-7.col-lg-5.mb-4
                  label(for='funds') Please indicate your needed funds range. *
                  select#funds.form-control(name='funds')
                    option(value='0') Not needed
                    option(value='1') $0 ~ $1,000 per semaster
                    option(value='2') $1,000 ~ $2,000 per semaster
                    option(value='3') $2,000 ~ $3,000 per semaster
            .btn-toolbar.mt-auto(role='toolbar')
              .btn-group.mr-5(role='group')
                button.btn.btn-outline-primary.btn-lg(type='button') Save Profile
              .btn-group(role='group')
                button.btn.btn-primary.btn-lg(type='submit', formaction='/login') Submit Profile
