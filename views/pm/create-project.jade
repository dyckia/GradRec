include ./layouts/_pm_header.jade
    .container
      .row.mt-sm-4.mt-md-5.mb-md-5
        .col-sm-12.border.rounded.p-5.bg-light
          h3 Create Project
          p.text-muted
            | To create a research project, please fill out the form below. Required fields are marked with *.
          form.needs-validation(novalidate='')
            .form-group.mt-4
              h5 Project Information
              hr.mt-1
              .row
                .col-sm-6.col-lg-4.mb-3
                  label(for='title') Project Title *
                  input#title.form-control(type='text', name='title', placeholder='Project 1', required='')
                  .invalid-feedback Project title is required.
                .col-sm-6.col-lg-4.mb-3
                  label(for='department') Department *
                  select#department.form-control(name='department', required='')
                    option(value='') Choose...
                    option(value='business') Business
                    option(value='computer') Computer Science
                    option(value='engineering') Engineering
                    option(value='medical') Medical
                    option(value='science') Science
                  .invalid-feedback Please choose a department.
              .row
                .col-sm-8.col-lg-6.mb-3
                  label(for='participants')
                    | Project Participants
                    span.text-muted (seperated by comma)
                  input#participants.form-control(type='text', name='participants', placeholder='Prof. John Appleseed')
              label(for='description') Project Description *
              textarea#description.form-control(name='description', rows='5', required='')
            .form-group.mt-4
              h5 Requirements
              hr.mt-1
              .form-group.mb-4
                h6 Degree
                .form-check.form-check-inline
                  input#phd.form-check-input(type='checkbox', value='phd')
                  label.form-check-label(for='phd') PhD
                .form-check.form-check-inline
                  input#master.form-check-input(type='checkbox', value='master')
                  label.form-check-label(for='master') Master
              .form-group.mb-4
                h6 Required Skills
                .form-check.form-check-inline
                  input#java.form-check-input(type='checkbox', value='java')
                  label.form-check-label(for='phd') Java
                .form-check.form-check-inline
                  input#c.form-check-input(type='checkbox', value='c')
                  label.form-check-label(for='c') C/C++
                .form-check.form-check-inline
                  input#python.form-check-input(type='checkbox', value='python')
                  label.form-check-label(for='python') Python
                .form-check.form-check-inline
                  input#ruby.form-check-input(type='checkbox', value='ruby')
                  label.form-check-label(for='ruby') Ruby
                .form-check.form-check-inline
                  input#r.form-check-input(type='checkbox', value='r')
                  label.form-check-label(for='r') R
                .form-check.form-check-inline
                  input#html.form-check-input(type='checkbox', value='html')
                  label.form-check-label(for='html') JavaScript
              .row
                .col-sm-10.col-lg-8.mb-3
                  label(for='backgrounds')
                    | Work Background
                    span.text-muted (background keywords are seperated by comma)
                  input#backgrounds.form-control(type='text', name='backgrounds', placeholder='node.js, angular, maven, etc.')
            .form-group.mt-4
              h5 Start Date
              hr.mt-1
              .row
                .col-xs-9.col-md-7.col-lg-5.mb-3
                  label(for='startDate') Please choose the start date of the project. *
                  input#startDate.form-control(type='date', name='startDate', min='2018-11-01', max='2020-12-31', required='')
                  .invalid-feedback Please choose your intended start date.
            .form-group.mt-4
              h5 Research Funds
              hr.mt-1
              .row
                .col-xs-9.col-md-7.col-lg-5.mb-4
                  label(for='funds') Please choose the avaiable funds range. *
                  select#funds.form-control(name='funds')
                    option(value='0') Not needed
                    option(value='1') $0 ~ $1,000 per semaster
                    option(value='2') $1,000 ~ $2,000 per semaster
                    option(value='3') $2,000 ~ $3,000 per semaster
            .btn-toolbar.mt-auto(role='toolbar')
              .btn-group.mr-5(role='group')
                button.btn.btn-outline-primary.btn-lg(type='button') Save Project
              .btn-group(role='group')
                button.btn.btn-primary.btn-lg(type='submit') Publish Project
    // Optional JavaScript
    // jQuery first, then Popper.js, then Bootstrap JS
    script(src='https://code.jquery.com/jquery-3.3.1.slim.min.js', integrity='sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo', crossorigin='anonymous')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js', integrity='sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49', crossorigin='anonymous')
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js', integrity='sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy', crossorigin='anonymous')
    script(src='../../js/validateForm.js')
